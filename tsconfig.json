{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node",
      "react",
      "react-native"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/shared": ["./src/shared"],
      "@/atoms": ["./src/frontend/components/atoms"],
      "@/molecules": ["./src/frontend/components/molecules"],
      "@/organisms": ["./src/frontend/components/organisms"],
      "@/templates": ["./src/frontend/components/templates"],
      "@/pages": ["./src/frontend/components/pages"],
      "@/nav-components": ["./src/frontend/components/navigation"],
      "@/hooks": ["./src/frontend/hooks"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".expo"
  ],
  "extends": "expo/tsconfig.base"
}
